{% extends 'base.html.twig' %}


{% block title %}Profil{% endblock %}
{% block bodyStyle %} style="background-color:#F5F5F5;" {% endblock %}
{% block navAcc %}nav-item{% endblock %}
{% block navSignIn %}"nav-item active"{% endblock %}


{% block navUserImagePdpPtofil %}
    src="assets/image/{{ User.pdp }}"
{% endblock %}



    {% block navUserNamePtofil %}
        {% if User.prenom >9%}
        {{ User.nom|capitalize |slice(0, 195) }}
            {% else %}
            {{ User.name }}
        {% endif %}

    {% endblock %}


{% block BoxOx %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 ProfilDet">
            <div class="col-md-12 BoxProfilDet d-flex align-items-center ">

            <div class="imgProfil"  style="width:100%;">
                <img style="border-radius: 100%;border:8px white solid;overflow:hidden; height:162px; width:162px;object-fit: cover;" class="img-fluid" src="assets/image/{{ User.pdp }}">

            </div>
            <div class="col-md-10">
                <div class="col-md-12 ProfilName">{{ User.nom|capitalize }} {{ User.prenom|capitalize }}</div>
                <div class="col-md-12 ProfolTel">{{ User.numTel|capitalize }} </div>
            </div>
            </div>

        </div>
    </div>

    <div class=" col-xs-12 col-sm-12 col-md-12" style="padding-top: 50px;">
        <div class="row">

            <div class="col-md-12"style="padding-bottom: 20px;">
                <a class="btn btn-primary AjoutPost" href="{{ path('AjoutArticle') }}">Ajouter une anonce</a>
            </div>
            <div class="col-md-12 ProfolTel" style="padding-bottom: 20px;">
                <h2 class="PubText">Votres publications</h2>
            </div>

            {% for p in Post %}
            <div class=" col-xs-12 col-sm-12 col-md-3 boxPostOx">
                    <div class="col-xs-12 col-sm-6 col-md-12 boxPost">
                        <div class="d-flex justify-content-between ">
                            <div class="col-xs-2 col-sm-3 col-md-3 imageUser">
                                <img class="img-fluid" src="assets/image/{{ p.pdp }}">

                            </div>

                            <div class="col-xs-8 col-sm-8 col-md-8 NomUser">
                                {{ p.nom|capitalize }} {{ p.prenom|capitalize }}
                            </div>
                            <div class="col-xs-2 col-sm-2 col-md-2 DetOx">
                                <div>
                                    <span class="detailOx">{{ p.quantite }}L</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 imageBox">
                                <img class="img-fluid"src="assets/image/{{ p.image }}">

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 titreBox">
                                {{ p.titre }}
                            </div>

                        </div>
                        <div class="row">

                            <div class="col-md-12 NumTel">
                                <i class="fa fa-phone-alt fa-sm " aria-hidden="true" style="color: #D3D3D3"></i>
                                <span> 23 818 764</span>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-12 NumTel">
                                <i class="fa fa-location-arrow fa-sm" aria-hidden="true" style="color: #D3D3D3"></i>
                                <span>{{ p.adresse }}</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 Prix">


                                <h6>
                                    {% if  p.prix != 0  %}
                                    <i class="fa fa-dollar-sign fa-sm" aria-hidden="true" style="color: #D3D3D3"></i>
                                    {{ p.prix }}Dt <span class="PrixJr">Par jour</span>
                                    {% else %}

                                        <i class="fa fa-dollar-sign fa-sm" aria-hidden="true" style="color: #D3D3D3"></i>
                                        Gratuit !
                                    {% endif %}
                                </h6>
                            </div>

                        </div>
                        <div class="row">

                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>




</div>
{% endblock %}